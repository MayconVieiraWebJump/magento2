<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <referenceBlock name="page.main.title" remove="true" />
    <referenceBlock name="cms_page" remove="true" />
    <referenceContainer name="main.content">
        <container name="container.banners.grid" htmlTag="section" htmlClass="container-banners-grid">
            <block class="Magento\Cms\Block\Block" as="banners_grid" before="-">
                <arguments>
                    <argument name="block_id" xsi:type="number">3</argument>
                </arguments>
            </block>
        </container>
    </referenceContainer>
    <referenceContainer name="main" remove="true" />
</page>